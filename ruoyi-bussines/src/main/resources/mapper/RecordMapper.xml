<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ruoyi.bussines.mapper.RecordMapper">

    <select id="selectAll" resultType="com.ruoyi.bussines.dto.RecordDTO">
        select
        id,
        user_id as userId,
        dialog_type as dialogType,
        region,
        `number`,
        remark,
        `time`,
        MONTH(`time`) as mouth
        from record
        <where>
            user_id = #{userId}
            <if test="dialogType != null and dialogType != ''">
                and dialog_type = #{dialogType}
            </if>
            <if test="region != null and region != ''">
                and region = #{region}
            </if>
            <if test="mouth != null and mouth != ''">
                and MONTH(`time`) = #{mouth}
            </if>
        </where>

    </select>
</mapper>